<div id="header">
<% if flash[:error] %>
	<%= "Error: #{flash[:error]}" %>
<% end %>
	<h1>The Forum</h1>
	<%= form_for :user, :url => "/login" do |f| %>
		Username: <%= f.text_field :username %>
		Password: <%= f.password_field :password %>
		<%= f.submit "Login" %>
	<% end %>
	<%= button_to "Register", new_user_path, :method => "get" %>
</div>


