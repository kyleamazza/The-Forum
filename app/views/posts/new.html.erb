<h1>New Post</h1>

<%= form_for @post do |f| %>
	<%= f.label :content %>
	<%= f.text_area :content %>
	<%= f.hidden_field :user_id, :value => session[:user]["id"] %>
	<%= f.submit "Submit" %>
<% end %>
<% if @post.errors %>
	<% @post.errors.each do |e| %>
		<%= "Error: #{e}" %>
	<% end %>
<% end %>
<%= link_to 'Back', posts_path %>
