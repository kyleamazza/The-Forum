<h1>New Comment</h1>

<%= form_for @comment do |f| %>
	<%= f.label :content %>
	<%= f.text_area :content %>
	<%= f.hidden_field :user_id, :value => session[:user]["id"] %>
	<%= f.hidden_field :post_id, :value => session[:post]["id"] %>
	<%= f.submit "Submit" %>
<% end %>
<% if @comment.errors %>
	<% @comment.errors.each do |e| %>
		<%= "Error: #{e}" %>
	<% end %>
<% end %>

<%= link_to 'Back', comments_path %>
